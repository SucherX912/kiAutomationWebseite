run = "python3 -m http.server 8000"
language = "html"
entrypoint = "index.html"
modules = ["web", "nodejs-20", "python-3.11"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "python3 -m http.server 8000"]
deploymentTarget = "static"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

